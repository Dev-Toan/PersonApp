<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/rectangle1"
    android:backgroundTint="#50000000"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTieuDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Year DJ party"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginLeft="5dp"
            android:animateLayoutChanges="true"/>

        <TextView
            android:id="@+id/txtNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="24 thang 7"
            android:textColor="@color/white"
            android:gravity="end"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:layout_marginTop="-9dp">

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:maxLines="2"
            android:text="it is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:animateLayoutChanges="true"/>

        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00000000"
            android:contentDescription="add"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/list" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp">

        <TextView
            android:id="@+id/txtStartTime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#5033FF33"
            android:text="00:00" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5033FF33"
            android:layout_marginLeft="-10dp"
            android:text="-" />

        <TextView
            android:id="@+id/txtEndTime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#5033FF33"
            android:text="00:10" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:checked="true"
            android:thumbTint="@color/switch_thumb_color"
            android:trackTint="@color/switch_track_color"/>

    </LinearLayout>
</LinearLayout>