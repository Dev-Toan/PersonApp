<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalendarActivity"
    android:background="@drawable/bg_gradien">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/btn_back"
        android:scaleType="centerCrop"
        android:backgroundTint="#00000000"
        android:contentDescription="Quay lại"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-10dp">

        <ImageButton
            android:id="@+id/iconweather"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bao1"
            android:contentDescription="Biểu tượng thời tiết"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/nhietdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25 °C"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textSize="36sp"/>

            <TextView
                android:id="@+id/textweather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mưa nhỏ"
                android:textColor="@color/white"
                android:textStyle="italic|bold"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnseeall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Xem tất cả"
        android:background="@drawable/rectangle1"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="15dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/rectangle2"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txttieude1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiêu đề 1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtnoidung1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="noi dung linh tinh 1"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="15dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/rectangle1"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/txttieude2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiêu đề 2"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtnoidung2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="noi dung linh tinh 2"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/rectangle3"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/txttieude3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiêu đề 3"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtnoidung3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="noi dung linh tinh 3"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="15dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/rectangle4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txttieude4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiêu đề 4"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtnoidung4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="noi dung linh tinh 4"
                        android:textColor="@color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtdayofweek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="-15dp"
                    android:text="Thứ 2"
                    android:gravity="center"
                    android:textSize="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="monospace"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:fontFamily="monospace"
                    android:text="31"
                    android:textColor="@color/white"
                    android:textSize="200dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="200sp"
                    android:autoSizeStepGranularity="2sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtmonthofyear"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:rotation="270"
                    android:text="Tháng 6, 2025"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="110dp"/>

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/square_border" />

            </FrameLayout>

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:layout_marginTop="-10dp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>